{
    "version": "2.0.0",
    "type": "shell",
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "problemMatcher": [],
    "presentation": {
        "showReuseMessage": false,
    },
    "args": [],
    "inputs": [],
    "tasks": [
        {
            "label": "clean sln",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "${workspaceFolder}/Microsoft.Developer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "hide": true,
            "problemMatcher": "$msCompile",
            "presentation": {
                "group": "build",
            }
        },
        {
            "label": "build sln",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/Microsoft.Developer.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": "clean sln",
            "problemMatcher": "$msCompile",
            "presentation": {
                "group": "build",
            }
        },
        {
            "label": "build openapi",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "-t:OpenApi"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Microsoft.Developer.Api"
            },
            "problemMatcher": "$msCompile",
        }
    ]
}